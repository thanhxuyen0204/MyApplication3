<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".profileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/icon_hinhdaidien"
            app:civ_border_color="#EC0000"
            app:civ_border_width="1dp"
            tools:ignore="MissingClass" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xuyen"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0989605123"
            android:textColor="#040404"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/ic_forward"
            android:padding="5dp"
            android:text="Thành viên mới (Green)"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 điểm"
            android:textStyle="bold"
            android:textColor="#8BC34A"
            android:textSize="20sp" />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Tài khoản Passio point"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 P"
            android:textStyle="bold"
            android:textColor="#8BC34A"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawableRight="@drawable/ic_forward"
            android:text="Thông tin cá nhân"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_two_wheeler_24"
            android:drawableRight="@drawable/ic_forward"
            android:text="Địa chỉ giao hàng"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
            android:drawableRight="@drawable/ic_forward"
            android:text="Coupon của tôi"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_baseline_history_24"
            android:drawableRight="@drawable/ic_forward"
            android:text="Lịch sửa đặt hàng"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_help"
            android:drawableRight="@drawable/ic_forward"
            android:text="Về chúng tôi"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableRight="@drawable/ic_forward"
            android:text="Liên hệ"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>